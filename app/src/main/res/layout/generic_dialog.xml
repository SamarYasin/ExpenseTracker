<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToOutline="true"
    android:clipToPadding="true"
    app:cardBackgroundColor="#FFFFFF"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/crossIVBtn"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:padding="4dp"
            android:layout_weight="0.5"
            android:contentDescription="Image"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialogTitleTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:letterSpacing="-0.03"
            android:layout_marginHorizontal="16dp"
            android:fontFamily="@font/inter_semi_bold"
            android:textColor="#292D32"
            android:textSize="20sp"
            android:includeFontPadding="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/crossIVBtn" />

        <ImageView
            android:id="@+id/warningIV"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginTop="16dp"
            android:contentDescription="Image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogTitleTV" />

        <TextView
            android:id="@+id/dialogMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:textSize="16sp"
            android:letterSpacing="-0.03"
            android:fontFamily="@font/inter_regular"
            android:textColor="#292929"
            android:text="Please memorize or save your password to avoid information loss. As this will be used to unlock the app. It cant be reset or recovered."
            android:paddingHorizontal="16dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/warningIV" />

        <LinearLayout
            android:id="@+id/btnLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialogMessage">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/positiveBtn"
                android:layout_height="52dp"
                app:cardCornerRadius="12dp"
                android:layout_width="0dp"
                android:layout_marginStart="16dp"
                android:layout_weight="0.45"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="@color/md_theme_light_outline">

                <TextView
                    android:id="@+id/positiveBtnTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:letterSpacing="-0.03"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="#292929"
                    android:textSize="16sp"/>

            </com.google.android.material.card.MaterialCardView>

            <View
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:layout_constraintTop_toBottomOf="@+id/positiveBtn" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/negativeBtn"
                android:layout_height="52dp"
                app:cardCornerRadius="12dp"
                android:layout_width="0dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                android:layout_marginEnd="16dp"
                android:layout_weight="0.45"
                app:strokeColor="@color/md_theme_light_outline">

                <TextView
                    android:id="@+id/negativeBtnTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_regular"
                    android:gravity="center"
                    android:letterSpacing="-0.03"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="0dp"
                    android:textColor="#292929"
                    android:textSize="16sp"/>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp"
            app:layout_constraintTop_toBottomOf="@+id/btnLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
