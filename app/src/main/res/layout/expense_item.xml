<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/registerButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/md_theme_light_outline"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_marginTop="10dp"
        android:layout_marginStart="8dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_circle"
            android:clipToOutline="true"
            android:scaleType="fitXY"
            android:contentDescription="Image"/>

        <ImageView
            android:id="@+id/expenseIV"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:layout_marginStart="34dp"
            android:layout_marginTop="28dp"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="Image"/>
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="120dp"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expenseCategoryNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:text="Travel"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:textColor="#292929"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/amountDirectionIV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_marginStart="16dp"
                android:src="@drawable/ic_launcher_background"
                android:contentDescription="Image"/>

        </LinearLayout>

        <TextView
            android:id="@+id/expenseNameTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_semi_bold"
            android:letterSpacing="-0.03"
            android:text="Visit to London"
            android:includeFontPadding="false"
            android:lineSpacingExtra="0dp"
            android:textColor="#292929"
            android:textSize="16sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/expenseAmountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/inter_semi_bold"
        android:letterSpacing="-0.03"
        android:text="$1000"
        android:layout_marginEnd="16dp"
        android:layout_gravity="end|center_vertical"
        android:includeFontPadding="false"
        android:lineSpacingExtra="0dp"
        android:textSize="16sp" />

</com.google.android.material.card.MaterialCardView>