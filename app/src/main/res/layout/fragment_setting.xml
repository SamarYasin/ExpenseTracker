<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="16dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/topBar"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/inter_semi_bold"
                android:gravity="center"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="Setting"
                android:textColor="#292929"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/profileLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/topBar">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="Profile"
                android:layout_weight="0.9"
                android:layout_gravity="start|center_vertical"
                android:textColor="#292929"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_weight="0.1"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_next"
                android:contentDescription="Image"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/analysisLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/profileLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="Analysis"
                android:layout_weight="0.9"
                android:layout_gravity="start|center_vertical"
                android:textColor="#292929"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_weight="0.1"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_next"
                android:contentDescription="Image"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/languageLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/analysisLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="Language"
                android:layout_weight="0.9"
                android:layout_gravity="start|center_vertical"
                android:textColor="#292929"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_weight="0.1"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_next"
                android:contentDescription="Image"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/aboutLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/languageLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="About"
                android:layout_weight="0.9"
                android:layout_gravity="start|center_vertical"
                android:textColor="#292929"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_weight="0.1"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_next"
                android:contentDescription="Image"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/helpLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/aboutLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="Help"
                android:layout_weight="0.9"
                android:layout_gravity="start|center_vertical"
                android:textColor="#292929"
                android:textSize="16sp"/>

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:padding="4dp"
                android:layout_weight="0.1"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/ic_next"
                android:contentDescription="Image"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/versionLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:paddingVertical="8dp"
            app:layout_constraintTop_toBottomOf="@+id/helpLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="Version"
                android:layout_weight="0.9"
                android:layout_gravity="start|center_vertical"
                android:textColor="#292929"
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/versionET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semi_bold"
                android:letterSpacing="-0.03"
                android:includeFontPadding="false"
                android:lineSpacingExtra="0dp"
                android:text="0.0.1"
                android:layout_weight="0.1"
                android:layout_gravity="start|center_vertical"
                android:textColor="#292929"
                android:textSize="16sp"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>